<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal" 
    tools:context="${packageName}.${activityClass}" >

    <ListView
        android:id="@+id/list_view_home_cart_items"
        android:layout_width="0dp"
        android:layout_height="match_parent" 
        android:layout_weight="2" 
        android:padding="4dp" />
    
    <LinearLayout 
        android:layout_width="0dp" 
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_weight="1" 
        android:padding="4dp">
        
	    <TextView 
	        android:id="@+id/text_view_home_total_price" 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content" 
	        android:gravity="center" 
	        android:textSize="35sp" />
	    
	    <Button 
	        android:id="@+id/button_home_add_item" 
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/label_add_item" />
	    
	    <Button 
	        android:id="@+id/button_home_clear_list" 
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:text="@string/label_clear_list" />
	    
    </LinearLayout>

</LinearLayout>
