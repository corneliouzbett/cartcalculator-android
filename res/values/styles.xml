<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="HomeLinearLayout">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="HomeLinearLayoutWeightedChild">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginBottom">@dimen/standard_space</item>
    </style>
    
    <style name="CartItemsListTextViewItemName">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CartItemsListTextViewItemPrice">
        <item name="android:textStyle">italic</item>
    </style>

</resources>
