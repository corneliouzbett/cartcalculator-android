<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.Cartcalculator" />

    <style name="HomeLinearLayout">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="HomeLinearLayoutWeightedChild">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
    </style>
    
    <style name="CartItemsListTextViewItemName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textview_list_item_name_size</item>
    </style>
    
    <style name="CartItemsListTextViewItemPrice">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/textview_list_item_price_size</item>
    </style>
    
    <style name="CartItemsListTextViewItemQuantity">
        <item name="android:textSize">@dimen/textview_list_item_quantity_size</item>
    </style>

    <style name="HomeTotalDueFooter" parent="HomeLinearLayoutWeightedChild">
        <item name="android:background">@drawable/bg_footer_gradient</item>
    </style>

    <style name="HomeTotalDueFooterLabel">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeTotalDueFooterValue">
        <item name="android:textColor">@color/bright_orange</item>
    </style>
    
    <style name="AddItemLayout">
        <item name="android:paddingTop">@dimen/quadruple_space</item>
        <item name="android:paddingLeft">@dimen/quadruple_space</item>
        <item name="android:paddingRight">@dimen/quadruple_space</item>
    </style>
    
    <style name="AddItemChild">
        <item name="android:paddingLeft">@dimen/double_space</item>
        <item name="android:paddingRight">@dimen/double_space</item>
    </style>

</resources>
