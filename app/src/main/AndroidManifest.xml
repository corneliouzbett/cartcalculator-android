<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thiagobaptista.cartcalculator"
    android:versionCode="6"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="false" 
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.thiagobaptista.cartcalculator.activity.HomeActivity">
            <intent-filter 
                android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.thiagobaptista.cartcalculator.activity.AddItemActivity"
            android:label="@string/title_activity_add_item" 
            android:parentActivityName="com.thiagobaptista.cartcalculator.activity.HomeActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY" 
                android:value="com.thiagobaptista.cartcalculator.activity.HomeActivity" />
        </activity>
    </application>

</manifest>
